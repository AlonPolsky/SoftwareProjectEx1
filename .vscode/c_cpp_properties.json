{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "defines": [],
            "cStandard": "c89",
            "cppStandard": "c++14",
            "compilerPath": "/usr/bin/gcc",
            "compilerArgs": [
                "-ansi",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-pedantic-errors",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/bin/${fileBasenameNoExtension}",
				"-lm"
            ]
        }
    ],
    "version": 4
}